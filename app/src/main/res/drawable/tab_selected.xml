<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF00ccff"/>
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="-3dp">
        <shape
            android:shape="rectangle">
            <padding
                android:bottom="15dp"
                android:left="10dp"
                android:right="10dp"
                android:top="15dp"/>
            <stroke
                android:color="#FF00ccff"
                android:width="2dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
</layer-list>