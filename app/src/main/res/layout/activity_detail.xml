<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/place_name"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom"
        android:text="서브밀"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />


    <!--isIndicator가 false일때 사용자가 직접 레이팅을 터치하여 설정할 수 있다.-->
    <!--여기서는 isIndicator가 true이므로 레이팅 값이 초기 설정값으로 고정되어있다.-->
    <!--max는 레이팅 할 수 있는 최고수치이다.-->
    <!--numStars는 전체 표시할 별의 개수이다.-->
    <!--rating은 초기에 설정할 별(레이팅)의 개수이다.-->
    <!--stepSize는 레이팅 변화의 폭이다.(움직이는 단위)-->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="238dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="72dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="0.0"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />

    <!--찜을 하기 위해 추가한 이미지뷰이다.(처음엔 빈 하트로 이미지를 설정해 주었다.)-->
    <ImageView
        android:id="@+id/heart_image"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

    <!--StoreListActivity에서 상점을 클릭했을때 상점에 대한 내용을 정보,리뷰,지도로 나누어 쉽게 확인할 수 있도록 TabHost를 이용하였다.-->
    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="412dp"
        android:layout_height="393dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25sp"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--'정보' 탭을 클릭했을때 나오는 내용-->
                <LinearLayout
                    android:id="@+id/tabSpec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:text="주소 : "
                        android:textColor="@color/colorblue"/>
                    <TextView
                        android:id="@+id/info_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="address"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="25sp"
                            android:text="영업시간 : "
                            android:textColor="@color/colorblue"/>
                        <TextView
                            android:id="@+id/start_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="11:00 ~ 21:00"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="5dp"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:text="전화번호 : "
                        android:textColor="@color/colorblue"/>

                    <TextView
                        android:id="@+id/info_tel"
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="tell"
                        android:textColor="#0000FF"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:text="대표메뉴 : "
                        android:textColor="@color/colorblue"/>
                    <TextView
                        android:id="@+id/info_menu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="menu"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:text="가격 : "
                        android:textColor="@color/colorblue"/>
                    <TextView
                        android:id="@+id/info_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="price"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"/>
                </LinearLayout>
                </LinearLayout>
                <!--'리뷰' 탭을 클릭했을때 나오는 내용-->
                <LinearLayout
                    android:id="@+id/tabSpec2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/detail_review_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <!--'지도' 탭을 클릭했을때 나오는 내용-->
                <LinearLayout
                    android:id="@+id/tabSpec3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/fragment"
                        android:name="com.example.smAio.StoreMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</android.support.constraint.ConstraintLayout>
